{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "device": "STM32F746ZG",
            "cwd": "${workspaceFolder}/app",
            "executable": "build/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "configFiles": ["${workspaceFolder}/../zephyr/boards/arm/nucleo_f746zg/support/openocd.cfg"],
            "gdbPath": "${userHome}/zephyr-sdk-0.16.5/arm-zephyr-eabi/bin/arm-zephyr-eabi-gdb",
            "preLaunchTask": "West Build"
        },
        {
            "name": "Attach",
            "device": "STM32F746ZG",
            "cwd": "${workspaceFolder}/app",
            "executable": "build/zephyr/zephyr.elf",
            "request": "attach",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "configFiles": ["${workspaceFolder}/../zephyr/boards/arm/nucleo_f746zg/support/openocd.cfg"],
            "gdbPath": "${userHome}/zephyr-sdk-0.16.5/arm-zephyr-eabi/bin/arm-zephyr-eabi-gdb",
            "showDevDebugOutput": "raw"
        },
    ]
}